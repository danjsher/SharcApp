<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.danjsher.sharcapp.RecordActivity"
    android:id="@+id/record_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recordings"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:id="@+id/savedRecordingsListView"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_record_button_text"
        android:id="@+id/stopRecordButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/recordingNameTextField"
        android:layout_alignEnd="@+id/recordingNameTextField"
        android:layout_alignLeft="@+id/recordingNameTextField"
        android:layout_alignStart="@+id/recordingNameTextField" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/recordingNameTextField"
        android:layout_above="@+id/stopRecordButton"
        android:layout_centerHorizontal="true"
        android:text="DefaultText"
        android:gravity="center_horizontal"
        android:focusable="true"
        android:enabled="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>
