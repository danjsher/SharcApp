<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danjsher.sharcapp.TemperatureActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperatures"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shoulder Rotation Servo"
            android:id="@+id/textView4"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/shoulder_rotation_temp_text"
            android:id="@+id/shoulderRotationServoTempText"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shoulder Flex Servo"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/shoulder_flex_temp_text"
            android:id="@+id/shoulderFlexServoTempText"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bicep Flex Servo"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bicep_flex_servo_temp_text"
            android:id="@+id/bicepFlexServoTempText"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bicep Rotation Servo"
            android:id="@+id/textView7"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shoulder Rotation Circuit"
            android:id="@+id/textView12"
            android:layout_row="4"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bicep_rotation_servo_temp_text"
            android:id="@+id/bicepRotationServoTempText"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/shoulder_rotation_circuit_temp_text"
            android:id="@+id/shoulderRotationCircuitTempText"
            android:layout_row="4"
            android:layout_column="1"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shoulder Flex Circuit"
            android:id="@+id/textView13"
            android:layout_row="5"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/shoulder_flex_circuit_temp_text"
            android:id="@+id/shoulderFlexCircuitTempText"
            android:layout_row="5"
            android:layout_column="1"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bicep Flex Circuit"
            android:id="@+id/textView14"
            android:layout_row="6"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bicep_flex_circuit_temp_text"
            android:id="@+id/bicepFlexCircuitTempText"
            android:layout_row="6"
            android:layout_column="1"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bicep Rotation Circuit"
            android:id="@+id/textView15"
            android:layout_row="7"
            android:layout_column="0"
            android:padding="10dp" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bicep_rotation_circuit_temp_text"
            android:id="@+id/bicepRotationCircuitTempText"
            android:layout_row="7"
            android:layout_column="1"
            android:gravity="center_horizontal" />
    </GridLayout>
</RelativeLayout>
