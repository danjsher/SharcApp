<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridLayout2"
        android:layout_alignEnd="@+id/gridLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ArmControlsTitleText"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:layout_columnSpan="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ArmStartButtonText"
            android:id="@+id/ArmStartButton"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/ArmStatusText"
            android:id="@+id/ArmStatusText"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ArmStopButtonText"
            android:id="@+id/ArmStopButton"
            android:layout_row="1"
            android:layout_column="1" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/SleeveControlsTitleText"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SleeveLiveModeButtonText"
            android:id="@+id/SleeveLiveModeButton"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/RecordTimeInputText"
            android:layout_row="2"
            android:layout_column="1"
            android:selectAllOnFocus="true"
            android:text="@string/RecordTextFieldText"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/SleeveStatusText"
            android:id="@+id/SleeveStatusText"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SleeveStopButtonText"
            android:id="@+id/SleeveStopButton"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SleeveRecordModeButtonText"
            android:id="@+id/SleeveRecordModeButton"
            android:layout_row="2"
            android:layout_column="0" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CalibrateButtonText"
        android:id="@+id/CalibrateButton"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/gridLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/CalibrateButtonStatusText"
        android:id="@+id/CalibrateButtonStatusText"
        android:layout_below="@+id/CalibrateButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
